<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_card_stat"
    android:padding="12dp"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_user"
            android:background="@drawable/shape_rounded_image"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#555"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnLock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/orange"
                android:layout_marginBottom="4dp" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/admin_user_delete"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/red" />
        </LinearLayout>
    </LinearLayout>

    <!--
        Additional statistics section for Owner accounts. This layout is
        initially hidden and becomes visible when the bound user is a real
        Owner (i.e. an account retrieved from Firebase rather than the
        seeded demo data). It displays three key metrics: today's revenue,
        total rooms owned, and number of bookings today. Each metric
        consists of a label and a value. The AdminManageUsersActivity
        toggles the visibility of this section and populates the values
        asynchronously based on Firebase queries.
    -->
    <LinearLayout
        android:id="@+id/layoutOwnerStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="8dp">

        <!-- Revenue today -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvOwnerRevenueLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doanh thu hôm nay"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvOwnerRevenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0đ"
                android:textColor="@color/primary_orange"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Total rooms -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvOwnerRoomsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng số phòng"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvOwnerRooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/primary_orange"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Bookings today -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvOwnerBookingsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã đặt hôm nay"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvOwnerBookings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/primary_orange"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/etDeleteReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập lý do xóa..."
        android:background="@drawable/bg_edittext"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnConfirmDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác nhận xóa"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/red"
        android:layout_marginTop="4dp"
        android:visibility="gone" />

</LinearLayout>