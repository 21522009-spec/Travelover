<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp"
    tools:context=".AdminManagePlacesActivity">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FF9900"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Quay lại"
            app:tint="@android:color/white"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lý địa điểm"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- Danh sách địa điểm -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:id="@+id/placeList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Một item mẫu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_stat"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_home"
                        android:scaleType="centerCrop"
                        android:background="@drawable/shape_rounded_image"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:text="Homestay Đà Lạt"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#000" />

                        <TextView
                            android:text="Vị trí: Phường 3, Đà Lạt"
                            android:textColor="#555"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:text="Giá: 750.000đ/đêm"
                            android:textColor="#777"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xóa"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#E53935" />
                </LinearLayout>

                <!-- Nhập lý do xóa (ẩn mặc định, chỉ hiện khi bấm Xóa) -->
                <EditText
                    android:id="@+id/etDeleteReason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập lý do xóa..."
                    android:padding="10dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnConfirmDelete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Xác nhận xóa"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#E53935"
                    android:layout_marginTop="4dp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
