<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- Ảnh địa điểm -->
    <ImageView
        android:id="@+id/imgPlace"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/thac_giang_dien"
        android:contentDescription="Ảnh địa điểm" />

    <!-- Nội dung cuộn -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tên địa điểm -->
            <TextView
                android:id="@+id/tvPlaceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khu du lịch Thác Giang Điền"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Vị trí -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/thac_giang_dien"
                    app:tint="#FF9900"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trảng Bom, Đồng Nai"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Đánh giá -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4.4"
                    android:stepSize="0.5"
                    android:progressTint="#FF9900" />

                <!-- Dựa theo rating của google map ngày 22/10/2025 -->
                <TextView
                    android:id="@+id/tvRatingValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.4/5"
                    android:textColor="#555"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Mô tả -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khu Du Lịch Sinh Thái Thác Giang Điền chính thức mở cửa đón khách 29/01/2006 ( nhằm mùng một Tết Bính Tuất 2006). Trải qua, một chặng đường dài hình thành và phát triển đến nay, Giang Điền từng bước không ngừng hoàn thiện với các loại hình dịch vụ phù hợp với không gian xanh, mang đậm nét sinh thái được ví như “ Đà Lạt của Miền Đông” và là một trong những điểm du lịch hấp dẫn, nổi tiếng được nhiều du khách trong và ngoài nước yêu mến."
                android:textColor="#444"
                android:textSize="15sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp" />

            <!-- Nút hành động -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBookRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đặt phòng ngay"
                android:backgroundTint="#FF9900"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWriteReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Viết đánh giá"
                android:backgroundTint="@android:color/white"
                android:textColor="#FF9900"
                android:strokeColor="#FF9900"
                android:strokeWidth="1"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
