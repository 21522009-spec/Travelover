<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp"
    tools:context=".AdminManageUsersActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_toolbar_gradient"
            android:minHeight="?attr/actionBarSize"
            android:paddingStart="20dp"
            android:paddingTop="24dp"
            android:paddingEnd="20dp"
            android:paddingBottom="28dp"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:subtitle="Theo dõi và kiểm soát tài khoản"
            app:subtitleTextColor="@android:color/white"
            app:title="Quản lý người dùng"
            app:titleCentered="true"
            app:titleTextColor="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Danh sách người dùng -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:id="@+id/userList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Một user mẫu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_stat"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_user"
                        android:background="@drawable/shape_rounded_image"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:text="Nguyễn Văn A"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#000" />

                        <TextView
                            android:text="Email: nguyenvana@example.com"
                            android:textColor="#555"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:text="Trạng thái: Hoạt động"
                            android:textColor="#4CAF50"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btnLock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Khóa"
                            android:backgroundTint="#FFA000"
                            android:textColor="@android:color/white"
                            android:layout_marginBottom="4dp" />

                        <Button
                            android:id="@+id/btnDelete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Xóa"
                            android:backgroundTint="#E53935"
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Nhập lý do xóa (ẩn mặc định) -->
                <EditText
                    android:id="@+id/etDeleteReason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập lý do xóa..."
                    android:background="@drawable/bg_edittext"
                    android:padding="10dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnConfirmDelete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Xác nhận xóa"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#E53935"
                    android:layout_marginTop="4dp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
